@model IEnumerable<InfraData.ViewModels.ProdutoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodBarras)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustoMedio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodBarras)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustoMedio)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Produto", new {id = item.Id})" class="btn btn-warning">
                <span title="Editar" class="glyphicon glyphicon-pencil"></span>
            </a>
            <a href="@Url.Action("Details", "Produto", new {id = item.Id})" class="btn btn-primary">
                <span title="Detalhes" class="glyphicon glyphicon-search"></span>
            </a>

            <a href="@Url.Action("Delete", "Produto", new {id = item.Id})" class="btn btn-danger">
                <span title="Excluir" class="glyphicon glyphicon-trash"></span>
            </a>
        </td>
    </tr>
}

</table>
